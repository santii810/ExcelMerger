{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app/main.py",
                "--server.runOnSave",
                "true"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Test",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "test.py",
                "--server.port",
                "8080"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
